{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "LF",
    "noImplicitAny": false,
    "declaration": true,
    "outDir": "./dist",
    "paths": {
      "*": ["node_modules/*"]
    },
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2020"
  },
  "exclude": ["public/*", "node_modules/*", "./**/*.spec.ts"],
  "include": ["src/**/*"]
}
